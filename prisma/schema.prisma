generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Joke {
  id         Int      @id @default(autoincrement())
  username   String
  content    String
  createdAt  DateTime @default(now())
  likes      Int      @default(0)
  dislikes   Int      @default(0)
}

model Vote {
  id        Int      @id @default(autoincrement())
  postId    Int
  ipAddress String
  type      String // "like" ou "dislike"
  createdAt DateTime @default(now())

  @@unique([postId, ipAddress]) // EmpÃªche les doublons pour un post et une IP
}